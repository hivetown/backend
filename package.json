{
	"name": "@hivetown/backend",
	"version": "0.0.1",
	"description": "Hivetown Backend",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "Hivetown",
	"license": "MIT",
	"scripts": {
		"lint": "eslint src tests --ext ts --fix",
		"format": "prettier --write {src,tests}/**/*.ts",
		"docs": "typedoc",
		"test": "jest",
		"test:watch": "jest --watch",
		"update": "yarn upgrade-interactive",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"dev": "nodemon",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz",
		"postinstall": "husky install .github/husky",
		"prepack": "yarn build && pinst --disable",
		"postpack": "pinst --enable",
		"upgrade": "yarn upgrade"
	},
	"dependencies": {
		"@decorators/di": "^2.0.0",
		"@decorators/express": "^2.9.1",
		"@mikro-orm/core": "^5.6.11",
		"@mikro-orm/migrations": "^5.6.11",
		"@mikro-orm/mysql": "^5.6.11",
		"@mikro-orm/reflection": "^5.5.0",
		"cors": "^2.8.5",
		"dotenv-cra": "^3.0.2",
		"express": "^4.18.2",
		"mysql2": "^2.3.3",
		"tslib": "^2.4.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@faker-js/faker": "^7.6.0",
		"@mikro-orm/cli": "^5.5.0",
		"@sapphire/eslint-config": "^4.3.8",
		"@sapphire/prettier-config": "^1.4.4",
		"@sapphire/ts-config": "^3.3.4",
		"@types/cors": "^2",
		"@types/express": "^4",
		"@types/jest": "^29.2.0",
		"@types/node": "^18.14.1",
		"@typescript-eslint/eslint-plugin": "^5.40.1",
		"@typescript-eslint/parser": "^5.40.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.26.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"jest": "^29.2.1",
		"lint-staged": "^13.0.3",
		"nodemon": "^2.0.20",
		"pinst": "^3.0.0",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3",
		"standard-version": "^9.3.2",
		"ts-jest": "^29.0.3",
		"typedoc": "^0.23.17",
		"typedoc-plugin-mdn-links": "^2.0.0",
		"typescript": "^4.8.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hivetown/backend.git"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"engines": {
		"node": ">=v14.0.0",
		"npm": ">=7.0.0"
	},
	"bugs": {
		"url": "https://github.com/hivetown/backend/issues"
	},
	"homepage": "https://hivetown.pt",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.7"
	},
	"mikro-orm": {
		"useTsNode": true,
		"tsConfigPath": "./tsconfig.mikro-orm.json",
		"configPaths": [
			"./src/mikro-orm.config.ts",
			"./dist/mikro-orm.config.js"
		]
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.2.4"
}
